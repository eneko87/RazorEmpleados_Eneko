@page
@model RazorEmpleados_Eneko.Pages.GestionEmpleados.EditModel

@{
    ViewData["Title"] = "Edición";
}

<h2>Edición</h2>

<h4>Empleados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empleados.ID" />
            <div class="form-group">
                <label asp-for="Empleados.Nombre" class="control-label"></label>
                <input asp-for="Empleados.Nombre" class="form-control" />
                <span asp-validation-for="Empleados.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.Apellido" class="control-label"></label>
                <input asp-for="Empleados.Apellido" class="form-control" />
                <span asp-validation-for="Empleados.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.FechaNacimiento" class="control-label"></label>
                <input asp-for="Empleados.FechaNacimiento" class="form-control" />
                <span asp-validation-for="Empleados.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.Direccion" class="control-label"></label>
                <input asp-for="Empleados.Direccion" class="form-control" />
                <span asp-validation-for="Empleados.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.Telefono" class="control-label"></label>
                <input asp-for="Empleados.Telefono" class="form-control" />
                <span asp-validation-for="Empleados.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.Email" class="control-label"></label>
                <input asp-for="Empleados.Email" class="form-control" />
                <span asp-validation-for="Empleados.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
